    <h1>üî• –¢–ï–°–¢ DDoS –°–ê–ô–¢–ê üî•</h1>
    <p class="stats">üíª –ü–æ—Å–µ—Ç–∏—Ç–µ–ª–µ–π –≤—Å–µ–≥–æ: <span id="totalVisitors">0</span></p>
    <p class="stats">üü¢ –°–µ–π—á–∞—Å –Ω–∞ —Å–∞–π—Ç–µ: <span id="onlineUsers">0</span></p>

    <script>
        // –£–≤–µ–ª–∏—á–µ–Ω–∏–µ –æ–±—â–µ–≥–æ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ –ø–æ—Å–µ—Ç–∏—Ç–µ–ª–µ–π
        if (!localStorage.getItem('totalVisitors')) {
            localStorage.setItem('totalVisitors', 0);
        }
        let totalVisitors = parseInt(localStorage.getItem('totalVisitors')) + 1;
        localStorage.setItem('totalVisitors', totalVisitors);
        document.getElementById('totalVisitors').textContent = totalVisitors;

        // –ü–æ–¥—Å—á–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã—Ö –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
        function updateOnlineUsers() {
            let onlineUsers = sessionStorage.getItem('onlineUsers') || 0;
            onlineUsers = parseInt(onlineUsers) + 1;
            sessionStorage.setItem('onlineUsers', onlineUsers);
            document.getElementById('onlineUsers').textContent = onlineUsers;
        }

        function decreaseOnlineUsers() {
            let onlineUsers = parseInt(sessionStorage.getItem('onlineUsers')) || 1;
            onlineUsers = Math.max(0, onlineUsers - 1);
            sessionStorage.setItem('onlineUsers', onlineUsers);
            document.getElementById('onlineUsers').textContent = onlineUsers;
        }

        updateOnlineUsers();
        window.addEventListener("beforeunload", decreaseOnlineUsers);
    </script>
